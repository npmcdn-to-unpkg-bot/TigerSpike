@{
    ViewData["Title"] = "Home Page";
}

<div ng-controller="FlickrFeedController as flickrCtrl" ng-init="flickrCtrl.loadFlickrFeed();" ng-cloak>

    <form name="searchForm" ng-submit="flickrCtrl.searchFlickr()" >
        <input type="text" class="mdl-textfield--floating-label" ng-model="search" />
        <input type="button" ng-click="flickrCtrl.searchFlickr()" value="Search" />
    </form>

    <div masonry='{ "transitionDuration" : "0.1s" , "itemSelector" : ".tile"}'>
        <!-- items -->
        <div masonry-tile tile class="tile masonrytile" ng-repeat="item in flickrCtrl.flickrFeed.items">

            <!-- Image card -->
            <div class="demo-card-wide mdl-card mdl-shadow--2dp">

                <div class="mdl-card__title">
                    <div class="mdl-card__title-text">{{item.title}}</div>
                </div>
                <div class="mdl-card__supporting-text">
                    <div ng-html-compile="item.description"></div>

                    <div>
                        Author: {{item.author}}
                    </div>
                    <div>
                        Authorid: {{item.author_id}}
                    </div>

                    <div>

                    </div>


                    {{item.date_taken}}
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <!-- Accent-colored flat button -->
                    <button class="mdl-button mdl-js-button mdl-button--accent" ng-repeat="tag in item.flickrFeedTags" ng-click="flickrCtrl.clickTags(tag)">
                        {{tag}}
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>



